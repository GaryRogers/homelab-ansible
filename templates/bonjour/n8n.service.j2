<?xml version="1.0" standalone='no'?><!--*-nxml-*-->
<!DOCTYPE service-group SYSTEM "avahi-service.dtd">

<!-- 
n8n Workflow Automation Service Advertisement for {{ hostname_override }}
Generated by Ansible on {{ ansible_date_time.iso8601 }}
-->

<service-group>
  <name replace-wildcards="yes">n8n Workflow Automation on %h</name>
  <service>
    <type>_http._tcp</type>
    <port>80</port>
    <txt-record>txtvers=1</txt-record>
    <txt-record>path=/n8n</txt-record>
    <txt-record>description=n8n Workflow Automation Platform</txt-record>
    <txt-record>hostname=homelab.local</txt-record>
  </service>
</service-group>