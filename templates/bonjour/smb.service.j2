<?xml version="1.0" standalone='no'?><!--*-nxml-*-->
<!DOCTYPE service-group SYSTEM "avahi-service.dtd">

<!-- 
SMB/CIFS Service Advertisement for {{ hostname_override }}
Generated by Ansible on {{ ansible_date_time.iso8601 }}
-->

<service-group>
  <name replace-wildcards="yes">SMB File Sharing on %h</name>
  <service>
    <type>_smb._tcp</type>
    <port>445</port>
    <txt-record>txtvers=1</txt-record>
    <txt-record>path=/shared</txt-record>
    <txt-record>workgroup=WORKGROUP</txt-record>
  </service>
</service-group>